# Monitoring server defaults
ENVIRONMENT=production

# Public hostname (used for Grafana root_url only)
GRAFANA_DOMAIN=grafana.yourdomain.com
GRAFANA_PORT=3000

# Optional image pins (override if desired)
PROMETHEUS_IMAGE=prom/prometheus:v2.53.3
ALERTMANAGER_IMAGE=prom/alertmanager:v0.27.0
GRAFANA_IMAGE=grafana/grafana-oss:11.3.0

# Prometheus retention (disk depends on scrape interval + number of targets)
PROMETHEUS_RETENTION_TIME=30d

# Grafana admin user (password should be stored in a secret file)
GRAFANA_ADMIN_USER=admin

